@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            @* pass id to server: *@
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="mb-3 row px-3">
                    <label asp-for="Name" class="p-1"></label>
                    <input asp-for="Name" disabled class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row px-3">
                    <label asp-for="DisplayOrder" class="p-1"></label>
                    <input asp-for="DisplayOrder" disabled class="form-control" />
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete Category</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Return to List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>


@* op jquery for client side validation, before sending *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}