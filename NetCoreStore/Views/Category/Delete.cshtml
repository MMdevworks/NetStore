@model Category

<form method="post">
    @* pass id to server: *@
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            </hr>
        </div>

        <div class="mb-3 row px-3">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row px-3">
            <label asp-for="DisplayOrder" class="p-1"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Category</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Return to List</a>
            </div>
        </div>



    </div>
</form>

@* op jquery for client side validation, before sending *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}