@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            @* pass id to server: *@
            <input asp-for="Id" hidden />
            <div class="border p-3">

                <div class="mb-3 row px-3">
                    <label asp-for="ProductName" class="p-1"></label>
                    <input asp-for="ProductName" disabled class="form-control" />
                </div>

                <div class="mb-3 row px-3">
                    <label asp-for="Description" class="p-1"></label>
                    <textarea asp-for="Description" disabled class="form-control"></textarea>
                </div>

                <div class="mb-3 row px-3">
                    <label asp-for="Brand" class="p-1"></label>
                    <input asp-for="Brand" disabled class="form-control" />
                </div>

                <div class="mb-3 row px-3">
                    <label asp-for="ListPrice" class="p-1"></label>
                    <input asp-for="ListPrice" disabled class="form-control" />
                </div>

                <div class="mb-3 row px-3">
                    <label asp-for="Price" class="p-1"></label>
                    <input asp-for="Price" disabled class="form-control" />
                </div>

                <div class="mb-3 row px-3">
                    <label asp-for="Price2" class="p-1"></label>
                    <input asp-for="Price2" disabled class="form-control" />
                </div>

                <div class="mb-3 row px-3">
                    <label asp-for="Price3" class="p-1"></label>
                    <input asp-for="Price3" disabled class="form-control" />
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete Product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Return to List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>


@* op jquery for client side validation, before sending *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}